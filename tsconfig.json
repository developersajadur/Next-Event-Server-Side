{
  "include": ["src"],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.config.js",
    "**/*.config.ts",
    ".eslintrc.js",
    ".eslintrc.cjs",
    ".eslintrc.ts"
  ],
  "compilerOptions": {
    "typeRoots": ["./types", "./node_modules/@types"],
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["node"]
  }
}
